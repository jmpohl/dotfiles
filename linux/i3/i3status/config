general {
    output_format = "i3bar" 
    interval = 10
    color_good = "#FFFFFF"
}

order += "battery 0"
order += "wireless wlp2s0"
order += "volume master"
order += "cpu_temperature 0"
order += "disk /"
order += "disk /home"
order += "tztime denver1"
order += "tztime denver2"

volume master {
    format = "VOL:%volume"
    device = "pulse"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
    last_full_capacity = true
    integer_battery_capacity = true
    format = "%status:%percentage"
    path = "/sys/class/power_supply/BAT0/uevent"
    low_threshold = 20
    threshold_type = percentage
}

wireless wlp2s0 {
    format_up = "WIFI:%quality"
    format_down = "down"
}

cpu_temperature 0 {
        format = "%degreesÂ°C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

disk "/" {
    format = "ROOT:%free"
}

disk "/home" {
    format = "HOME:%free"
}

tztime denver1 { 
    format = "%m-%d"
    timezone = "America/Denver"
}

tztime denver2 { 
    format = "%l:%M"
    timezone = "America/Denver"
}
